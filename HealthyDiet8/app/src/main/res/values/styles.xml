
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style parent="Widget.Design.TextInputLayout" name="InputLayout_Login">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textColorHint">@color/gray_color</item>
        <item name="android:colorControlNormal">@color/gray_color</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
    </style>
</resources>
